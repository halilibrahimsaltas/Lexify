{
  "expo": {
    "name": "lexify-mobile",
    "slug": "lexify-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro"
    },
    "fonts": [
      {
        "asset": "./src/assets/fonts/Merriweather-VariableFont_opsz,wdth,wght.ttf",
        "family": "Merriweather"
      },
      {
        "asset": "./src/assets/fonts/Merriweather-Italic-VariableFont_opsz,wdth,wght.ttf",
        "family": "Merriweather-Italic"
      }
    ]
  }
}
